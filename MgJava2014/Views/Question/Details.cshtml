@model MgJava2014.Models.DbModel.Question

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<fieldset>
    <legend>@Html.DisplayFor(model => model.QuestionName) ,награда: @Html.DisplayFor(model => model.Points) точки</legend>

    
   
   
    <div class="display-field">
        @Html.DisplayTextFor(model => model.QuestionText)
    </div>

</fieldset>
@using (Html.BeginForm("Submit", "Question", FormMethod.Post, new{enctype="multipart/form-data"}))
{
    @Html.Hidden("questionId", Model.Id)
    <input type="file" id="file" name="file" /><br />
    <input type="submit" value="Изпрати решението" />
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
